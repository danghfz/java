<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--context-param是上下文参数(属于整个web工程)可以配置多组-->
    <context-param>
        <param-name>username</param-name>
        <param-value>localhost</param-value>
    </context-param>
    <context-param>
        <param-name>password</param-name>
        <param-value>root</param-value>
    </context-param>


    <!--servlet给服务器配置servlet程序-->
    <servlet>
        <!-- 定义servlet的名称(一般是类名) -->
        <servlet-name>HelloServlet</servlet-name>
        <!-- 定义servlet的类名(全路径) -->
        <servlet-class>com.localhost.HelloServlet</servlet-class>
        <!--初始化参数-->
        <init-param>
            <!--参数名-->
            <param-name>url</param-name>
            <!--参数值-->
            <param-value>jdbc:mysql://localhost:3306/test</param-value>
        </init-param>
    </servlet>
    <!--servlet-mapping给程序配置访问地址-->
    <servlet-mapping>
        <!-- 告诉服务器,当前地址给哪个Servlet程序使用 -->
        <servlet-name>HelloServlet</servlet-name>
        <!--配置访问地址
            / 斜杠在服务器解析时,表示地址为http://ip:port/工程路径
            /hello 表示访问地址为http://ip:port/工程路径/world
        -->
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HelloServlet2</servlet-name>
        <servlet-class>com.localhost.HelloServlet2</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloServlet2</servlet-name>
        <url-pattern>/hello2</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HelloServlet3</servlet-name>
        <servlet-class>com.localhost.HelloServlet3</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloServlet3</servlet-name>
        <url-pattern>/hello3</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletContext1</servlet-name>
        <servlet-class>com.localhost.ServletContext1</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletContext1</servlet-name>
        <url-pattern>/servletContext1</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HttpServletRequest_Demo</servlet-name>
        <servlet-class>com.request.HttpServletRequest_Demo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HttpServletRequest_Demo</servlet-name>
        <url-pattern>/request1</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Servlet_1</servlet-name>
        <servlet-class>com.request.Servlet_1</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Servlet_1</servlet-name>
        <url-pattern>/servlet1</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Servlet_2</servlet-name>
        <servlet-class>com.request.Servlet_2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Servlet_2</servlet-name>
        <url-pattern>/servlet2</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Forward</servlet-name>
        <servlet-class>com.base.Forward</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Forward</servlet-name>
        <url-pattern>/forward</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ResponseServlet</servlet-name>
        <servlet-class>com.response.ResponseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResponseServlet</servlet-name>
        <url-pattern>/responseServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Response_old</servlet-name>
        <servlet-class>com.response.Response_old</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Response_old</servlet-name>
        <url-pattern>/response_old</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Response_new</servlet-name>
        <servlet-class>com.response.Response_new</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Response_new</servlet-name>
        <url-pattern>/response_new</url-pattern>
    </servlet-mapping>

</web-app>