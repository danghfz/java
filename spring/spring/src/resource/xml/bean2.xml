<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--外部bean注入-->
    <!--创建service和dao对象-->
    <bean id="userDao" class="com.local.spring5.ioc.xml.dao.Impl.UserDaoImpl"/>

    <bean id="userService" class="com.local.spring5.ioc.xml.service.UserService">
        <!--    注入属性
        name属性：类里面属性名称
        ref属性：创建userDao对象bean标签的id值-->
        <property name="userDao" ref="userDao"/>
    </bean>
    <!--内部bean注入-->
    <bean id="employee" class="com.local.spring5.ioc.xml.bean.Employee">
        <property name="name" value="张三"/>
        <property name="dept">
            <bean id="Dept" class="com.local.spring5.ioc.xml.bean.Dept">
                <property name="dname">
                    <value>开发部</value>
                </property>
                <property name="depton" value="001"/>
            </bean>
        </property>
    </bean>
    <!--级联赋值-->
    <bean id="emp" class="com.local.spring5.ioc.xml.bean.Employee">
        <property name="name" value="张三"/>
        <property name="dept" ref="dept"/>
        <property name="dept.depton" value="001"/><!--需要get方法-->
    </bean>
    <bean id="dept" class="com.local.spring5.ioc.xml.bean.Dept">
        <property name="dname" value="安保部"/>
    </bean>
</beans>